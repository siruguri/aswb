          .comment-form
            %form
              .form-group
                %label
                  %span 
                    %a{href:'#'} ASWB Admin:
                %textarea{class: 'form-control comment-text', placeholder: 'Enter your comment...'}
                %button{type: 'button', class: 'btn btn-primary', onClick: 'appendComment();'} Add Comment
